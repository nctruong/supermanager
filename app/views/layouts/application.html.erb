<!DOCTYPE html>
<html>
<head>
  <title>Supermanager</title>
  <%= stylesheet_link_tag "application", media: :all %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'shared/analytics' %>
</head>
<body>
  <div id="container">
    <div class="top"></div>
    <div id="main">
      <div class="header">
        <%= image_tag 'logos/ajaxb.png', alt: 'Ajax B logo' %>
        <h1>Supermanager Ajax Breedenbroek 2012 - 2013</h1>
        <p>
          <% if logged_in? %>
            Welkom, <%= @contestant.name %>. <%= link_to 'Log uit', logout_path, method: :delete %>.
          <% else %>
            Welkom, gast. <%= link_to 'Doe ook mee', sign_up_path %> of <%= link_to 'log in', login_path %>.
          <% end %>
          </p>
      </div>
      <%= render 'shared/nav', pages: [
        [root_path, 'Home'],
        (logged_in? ? [my_superteam_path, 'Mijn Superteam'] : [sign_up_path, 'Meedoen']),
        [announcements_path, 'Mededelingen'],
        [players_path, 'Spelerslijst'],
        [rules_path, 'Spelregels'],
        [contact_path, 'Contact']
      ] %>
      <%= render 'shared/flashes' %>
      <div class="content">
        <%= yield %>
      </div>
    </div>
    <div class="bottom"></div>
  </div>
</body>
</html>